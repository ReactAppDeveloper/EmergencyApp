<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/images">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/waqas"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Easiest Way To Manage Appoinment And Call Ambulancee"
        android:id="@+id/textView3"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency App"
        android:id="@+id/textView4"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textColor="@android:color/white"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/signin"
        android:layout_marginTop="46dp"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:id="@+id/signup"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/signin"
        android:layout_alignLeft="@+id/signin"
        android:layout_alignStart="@+id/signin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TERMS AND CONDITITON"
        android:id="@+id/textView5"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white" />

</RelativeLayout>